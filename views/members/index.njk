{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

   <a href="/members/create">Novo</a>

   <table width="100%">
      <thead>
         <tr>
            <th>Instrutores</th>
            <th>Atendimento</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
         {% for instructor in instructors %}
         <tr>
            <td>
               <span style="background-image: url({{instructor.avatar_url}})"></span>
               {{instructor.name}}
            </td>
            <td>{{instructor.services}}</td>
            <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
         </tr>
         {% endfor %}

      </tbody>
   </table>
</div>

{% endblock content %}