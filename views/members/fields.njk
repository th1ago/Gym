<div class="item">
    <div>Avatar Url</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{members.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome do membro" value="{{members.name}}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="email" value="{{members.email}}">
    </div>
</div>

<div class="item">
    <div>Idade</div>
    <div>
        <input type="date" name="birth" value="{{members.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" 
            {% if members.gender == 'M' %}
                checked
            {% endif %}>
            Masculino
        </span>
       
        <span><input type="radio" name="gender" value="F"
            {% if members.gender == 'F' %}
                checked
            {% endif %}>
            Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo Sanguineo</div>
    <div>
        <select name="blood">
            <option value="A" {% if members.blood == "A"%}selected{% endif %}>A</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso</div>
    <div>
        <input type="number" name="weight" value="{{members.weight}}">
    </div>
</div>

<div class="item">
    <div>Altura</div>
    <div>
        <input type="number" name="height" value="{{members.height}}">
    </div>
</div>

<button type="submit">Salvar</button>