{% extends "layout.njk" %}

{% block head %}
    <title>Anime - Thiago Murakami</title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Aulas</h1>
    </div>

    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card_image-container {{ 'feature-wrapper' if item.feature}}">
                <img src="https://img.youtube.com/vi/{{item.id}}/hqdefault.jpg" alt="{{item.title}}">
                {% if item.feature %}
                    <div class="feature">feature</div>
                {% endif %}
            </div>
            <div class="card_content">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>{{item.duration}}</p>
                <p class="card_price">{{item.price}}</p>
            </div>
        </div>
        {% endfor %}}
 
    </section>

    <script src="/script.js"></script>

{% endblock %}